# SmartKitchen Connect - Environment Configuration
# Standard: IEEE 830 | Requirement: RNF-03 (Security)
# DO NOT commit .env file to version control

# Django Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/smartkitchen_db
DB_NAME=smartkitchen_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# JWT Configuration (RNF-03)
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=1440  # minutes (24 hours)

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications - RF-04)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Azure Storage (optional, for production)
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER=

# Sentry Configuration (monitoring)
SENTRY_DSN=

# AI/ML Configuration (RF-03)
AI_MODEL_PATH=models/
ENABLE_AI_PREDICTIONS=True

# Performance Settings (RNF-01)
CACHE_TIMEOUT=300  # seconds
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
