[flake8]
# PEP8 Configuration (RNF-02)
# Standard: IEEE 830

max-line-length = 100
exclude =
    .git,
    __pycache__,
    */migrations/*,
    */venv/*,
    */env/*,
    .venv,
    .eggs,
    *.egg,
    build,
    dist

ignore =
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)

per-file-ignores =
    __init__.py:F401

max-complexity = 10
